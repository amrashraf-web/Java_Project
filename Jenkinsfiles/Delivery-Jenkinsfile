pipeline {
    agent any
    environment {
        sonar_url = 'http://amrashraf.com:9000/sonarqube'
        sonar_project_key = 'my-java-app'
        sonar_project_name = 'my-java-app'
        VERSION_PREFIX = '0.1.'
        MAX_BUILD_NUMBER = 9
    }
    stages {
        stage('Reset Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Reset Sonar Analysis') {
            steps {
                script {
                    // Unstash the SonarQube settings (if stashed during checkout or build)
                    unstash 'sonar-stash'

                    // Reset SonarQube analysis using the sonar-scanner command
                    bat "sonar-scanner -Dsonar.projectKey=${SONAR_PROJECT_KEY} -Dsonar.projectName=${SONAR_PROJECT_NAME} -Dsonar.host.url=${SONAR_URL} -Dsonar.login=${SONAR_LOGIN} -Dsonar.password=${SONAR_PASSWORD}"

                    // Stash the SonarQube settings again for future stages
                    stash includes: 'sonar-stash/**', name: 'sonar-stash'
                }
            }
        }
        stage('Checkout') {
            steps {
                script {
                    def gitCredentialsId = 'github_key'
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'develop']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/amrashraf-web/Java_Project.git',
                            credentialsId: gitCredentialsId
                        ]]
                    ])
                }
            }
        }
        stage('Build and Test') {
            steps {
                script {
                    def majorVersion = Integer.parseInt(VERSION_PREFIX.tokenize('.')[0])
                    def minorVersion = Integer.parseInt(VERSION_PREFIX.tokenize('.')[1])
                    // Convert BUILD_NUMBER to integer and calculate the beta version
                    def buildNumber = BUILD_NUMBER.toInteger()
                    def maxBuildNumber = MAX_BUILD_NUMBER.toInteger()
                    betaVersion = "${majorVersion}.${minorVersion}.${buildNumber % (maxBuildNumber + 1)}-beta"
                    sh """
                       echo \"${betaVersion}\"
                       chmod +x \"${WORKSPACE}/automations/bin\"/*.sh &&
                       \"${WORKSPACE}/automations/bin/compile.sh\" "maven_extra_arguments=-s .m2/settings.xml" "version=${betaVersion}" "sonar_url=$SONAR_URL" "sonar_project_key=$SONAR_PROJECT_KEY" "sonar_project_name=$SONAR_PROJECT_NAME" &&
                       mkdir -p \"${WORKSPACE}/publish-artifacts\" &&
                       cp target/hello-world-web.war \"${WORKSPACE}/publish-artifacts/hello-world-web-${betaVersion}.war\"
                    """
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts "publish-artifacts/hello-world-web-${betaVersion}.war"
        }
    }
}
