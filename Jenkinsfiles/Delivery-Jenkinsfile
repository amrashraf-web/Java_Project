def newVersion
pipeline {
    agent any

    environment {
        sonar_url = 'http://amrashraf.com:9000/sonarqube'
        sonar_project_key = 'my-java-app'
        sonar_project_name = 'my-java-app'
        VERSION_PREFIX = '0.1.'
        BETA_VERSION_FILE = "${HOME}/beta_version.txt"
        nexus_url = 'amrashraf.com:8082'
        VERSION_FILE = 'version.txt'
    }
                        
    stages {
        stage('Reset Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                script {
                    def gitCredentialsId = 'github_key'
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'develop']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/amrashraf-web/Java_Project.git',
                            credentialsId: gitCredentialsId
                        ]]
                    ])
                    sh "git clean -dfx"
                }
            }
        }
        stages {
            stage('Get Latest Version') {
                steps {
                    script {
                        def currentVersion = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()
    
                        if (currentVersion.isEmpty()) {
                            // No tags found, create a new version
                            currentVersion = '0.0.1-beta'
                        } else {
                            // Increment the last part of the version
                            def versionParts = currentVersion.split('-')
                            def lastPart = versionParts[1].toInteger() + 1
                            currentVersion = "${versionParts[0]}-${lastPart}"
                        }
    
                        // Set the version as an environment variable
                        env.NEW_VERSION = currentVersion
                    }
                }
            }
    
            stage('Commit and Push') {
                steps {
                    script {
                        // Commit and push the new version
                        sh "git commit -am 'Bump version to ${env.NEW_VERSION}'"
                        sh "git tag ${env.NEW_VERSION}"
                        sh 'git push origin develop --tags'
                    }
                }
            }
        }

        // stage('Build and Test') {
