pipeline {
    agent any              
    stages {
        stage('Reset Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout') {
            steps {
                script {
                    def gitCredentialsId = 'github_key'
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'develop']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/amrashraf-web/Java_Project.git',
                            credentialsId: gitCredentialsId
                        ]]
                    ])
                }
            }
        }
        stage('Create New Version Tag') {
            steps {
                script {
                    def gitCredentialsId = 'github_key'
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'develop']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/amrashraf-web/Java_Project.git',
                            credentialsId: gitCredentialsId
                        ]]
                    ])
                    def version = generateNextBetaVersion('0.0.1-beta')
                    
                    if (!tagExists(version)) {
                        sh "git tag ${version}"
                        sh "git push origin ${version}"
                    } else {
                        echo "Tag '${version}' already exists."
                    }
                }
            }
        }
        
        stage('List All Tag Versions') {
            steps {
                def gitCredentialsId = 'github_key'
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'develop']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/amrashraf-web/Java_Project.git',
                        credentialsId: gitCredentialsId
                    ]]
                ])
                script {
                    sh "git fetch --tags"
                    sh "git tag -l"
                }
            }
        }
            
        stage('Create Auto Increment Tag') {
            steps {
                script {
                    def gitCredentialsId = 'github_key'
                    checkout([
                        $class: 'GitSCM',
                        branches: [[name: 'develop']],
                        userRemoteConfigs: [[
                            url: 'https://github.com/amrashraf-web/Java_Project.git',
                            credentialsId: gitCredentialsId
                        ]]
                    ])
                    
                    // Your auto-incrementing logic goes here
                    def lastBetaTag = sh(script: 'git describe --abbrev=0 --tags | grep "0.0.1-beta"', returnStdout: true).trim()
                    
                    if (lastBetaTag) {
                        def version = generateNextBetaVersion(lastBetaTag)
                        
                        if (!tagExists(version)) {
                            sh "git tag ${version}"
                            sh "git push origin ${version}"
                        } else {
                            echo "Tag '${version}' already exists."
                        }
                    } else {
                        echo "No beta tags found to auto-increment."
                    }
                }
            }
        }

    }
    
    post {
        always {
            script {
                sh 'echo "Done"'
            }
        }
    }
}

def generateNextBetaVersion(baseVersion) {
    def matcher = (baseVersion =~ /.*-(beta-(\d+))/)
    
    if (matcher.matches()) {
        def lastBetaCount = matcher[0][2].toInteger()
        def nextBetaCount = lastBetaCount + 1
        return "${baseVersion}-${nextBetaCount}"
    } else {
        return "${baseVersion}-1"
    }
}

def tagExists(tag) {
    return sh(script: "git tag -l ${tag}", returnStatus: true) == 0
}